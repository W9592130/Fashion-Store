<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/imgCardName"
        android:layout_width="344dp"
        android:layout_height="62dp"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="44dp"
        android:adjustViewBounds="true"
        android:background="@drawable/grey_bdr_bg"
        android:focusable="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.597"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView3"
        tools:ignore="MissingConstraints">

        <EditText
            android:id="@+id/edtName"
            android:layout_width="296dp"
            android:layout_height="56dp"
            android:background="@android:color/transparent"
            android:focusable="true"
            android:hint="Full Name"
            android:inputType="text"
            android:textColor="#000000"
            android:textColorHint="#676767"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="MissingConstraints" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/imgCardphone"
        android:layout_width="344dp"
        android:layout_height="62dp"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="36dp"
        android:adjustViewBounds="true"
        android:background="@drawable/grey_bdr_bg"
        android:focusable="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.507"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgCardName">

        <EditText
            android:id="@+id/edtEmail"
            android:layout_width="300dp"
            android:layout_height="53dp"
            android:background="@android:color/transparent"
            android:focusable="true"
            android:hint="Email Id"
            android:inputType="textEmailAddress"
            android:textColor="#000000"
            android:textColorHint="#676767"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/imgCardemail"
        android:layout_width="344dp"
        android:layout_height="62dp"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="36dp"
        android:adjustViewBounds="true"
        android:background="@drawable/grey_bdr_bg"
        android:focusable="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgCardphone">

    </androidx.constraintlayout.widget.ConstraintLayout>

    <Button
        android:id="@+id/editprof"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="72dp"
        android:backgroundTint="#FF5879"
        android:text="Done"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView36"
        android:layout_width="412dp"
        android:layout_height="40dp"
        android:text="Edit Profile"
        android:textAlignment="center"
        android:textColor="#0C0C0C"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="204dp"
        android:layout_height="149dp"
        android:layout_marginTop="44dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView36"
        app:srcCompat="@drawable/img_13" />

    <EditText
        android:id="@+id/edtMobile"
        android:layout_width="312dp"
        android:layout_height="50dp"
        android:background="@android:color/transparent"
        android:focusable="true"
        android:hint="Mobile Number"
        android:inputType="phone"
        android:maxLength="10"
        android:textColor="#000000"
        android:textColorHint="#676767"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@+id/imgCardemail"
        app:layout_constraintEnd_toEndOf="@+id/imgCardemail"
        app:layout_constraintStart_toStartOf="@+id/imgCardemail"
        app:layout_constraintTop_toTopOf="@+id/imgCardemail" />

</androidx.constraintlayout.widget.ConstraintLayout>